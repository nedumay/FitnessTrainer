<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style text GiaPay -->
    <style name="text_view_title_app">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#59000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">6</item>
    </style>
    <!-- Style text Always pay-->
    <style name="text_view_subtitle_app">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#59000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">6</item>

    </style>
    <!-- Style Header text-->
    <style name="header">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:gravity">top</item>

    </style>
    <!-- Style text forgot password-->
    <style name="forgot_password">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:gravity">top</item>
    </style>
    <!-- Style text don`t have account-->
    <style name="don_t_have_">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white_D</item>
        <item name="android:gravity">top</item>
    </style>
    <!-- Style text please_enter-->
    <style name="please_enter">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_B9</item>

    </style>
    <!-- Style text id layout registration-->
    <style name="some_id">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#909090</item>

    </style>
    <!-- Style text Male/Female-->
    <style name="male_female">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- активное состояние (30% прозрасчности для фона) -->
        <item name="colorControlActivated">@android:color/holo_green_light</item>
        <!-- неактивное состояние (30% прозрасчности для фона) -->
        <item name="colorSwitchThumbNormal">@android:color/holo_green_light</item>
        <!-- цвет дорожки -->
        <item name="android:colorForeground">@android:color/darker_gray</item>

    </style>
    <!-- Style text registration in-->
    <style name="register_in">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757575</item>
    </style>
    <!-- Style text by creating-->
    <style name="by_creating">
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>

    </style>

    <!-- Style button-->
    <style name="OutlinedButton.Green" parent="Widget.Material3.Button.TextButton">
        <item name="android:paddingLeft">@dimen/m3_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/m3_btn_padding_right</item>
        <item name="strokeColor">@color/button_outline_color_selector</item>
        <item name="backgroundTint">@color/button_background_color_selector</item>
        <item name="android:textSize">@dimen/btn_size_18</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="strokeWidth">@dimen/m3_btn_stroke_size</item>
</style>
    <!-- Style card male/female-->
    <style name="CardView.Green" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/cardview_outline_color_selector</item>
        <item name="backgroundTint">@color/cardview_background_color_selector</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <!-- Style radio Buttons-->
    <style name="RadioButton.Green" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radio_btn_background</item>
        <item name="android:textColor">@color/control_switch_selector</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <!-- Style appBar text-->
    <style name="head_appBar">
        <item name="fontFamily">@font/ubuntu_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <!-- Style appBar chips-->
    <style name="chips_style" >
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textSize">10sp</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:textColor">@color/control_switch_selector</item>
    </style>

    <!-- Style settings text-->
    <style name="settings_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <!-- Style input layout-->
    <style name="text_input_layout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxBackgroundColor">@color/background_til</item>
        <item name="boxCornerRadiusBottomEnd">57dp</item>
        <item name="boxCornerRadiusBottomStart">57dp</item>
        <item name="boxCornerRadiusTopEnd">57dp</item>
        <item name="boxCornerRadiusTopStart">57dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <!-- Style input layout password-->
    <style name="text_input_layout_password" parent="text_input_layout">
        <item name="endIconMode">password_toggle</item>
    </style>

    <!-- Style input edit text-->
    <style name="input_edit_text" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColor">@color/gray</item>
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:gravity">fill</item>
    </style>

    <!-- Style input edit text password-->
    <style name="input_edit_text_password" parent="input_edit_text">
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- Style input edit text date-->
    <style name="input_edit_text_date" parent="input_edit_text">
        <item name="android:inputType">date</item>
    </style>

    <!-- Style input edit text number-->
    <style name="input_edit_text_number" parent="input_edit_text">
        <item name="android:inputType">numberDecimal</item>
    </style>





</resources>