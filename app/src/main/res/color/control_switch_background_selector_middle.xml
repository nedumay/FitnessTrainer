<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:color="@color/green">
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="@color/white_gray" />
        </shape>
    </item>
    <item android:state_pressed="true" android:color="@color/green">
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="@color/white_gray" />
        </shape>
    </item>
    <item android:color="@color/white_gray">
        <layer-list>
            <item android:top="-1dp" android:bottom="-1dp" android:left="-1dp">
                <shape>
                    <corners android:radius="10dp"/>
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>