<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.testproject">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.presentation.app.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_gia_pay_background"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_gia_pay_background"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestProject"
        tools:targetApi="33">
        <activity
            android:name=".app.presentation.workout.detail.DetailActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait"  />
        <activity
            android:name=".app.presentation.workout.list.ExercisesActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait"  />
        <activity
            android:name=".app.presentation.workout.lvl.LvlActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait"  />
        <activity
            android:name=".app.presentation.settings.SettingsActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".app.presentation.notification.NotificationActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".app.presentation.dashboard.DashboardActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".app.presentation.registration.four.RegistrationFour"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".app.presentation.registration.three.RegistrationThree"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".app.presentation.registration.two.RegistrationTwo"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".app.presentation.registration.one.RegistrationOne"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".app.presentation.reset.ResetActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".app.presentation.login.LoginActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".app.presentation.main.MainActivity"
            android:configChanges="orientation"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>